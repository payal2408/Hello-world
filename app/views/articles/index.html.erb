<div class="container">
	<div class="col-sm-12 mt-3 mx-auto">
		<div class="card shadow p-4">
			<h1>Articles</h1>

			<ul>
			  <% @articles.each do |article| %>
			    <li>
			       <a href="/articles/<%= article.id %>">
			        <%= article.title %>
			      </a>
			    </li>
			  <% end %>
			</ul>

			<%= link_to "New Article", new_article_path %>
			<div class="m-3 mx-auto">
				<%= paginate @articles %>
			</div>
		</div>
	</div>
</div>


